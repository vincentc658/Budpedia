<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/size_16"
    app:cardCornerRadius="@dimen/size_16"
    app:cardElevation="@dimen/size_8"
    android:layout_height="wrap_content"
    android:background="@color/red_500"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/size_8"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivAlat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/size_150"
            android:layout_height="@dimen/size_150"/>
        <LinearLayout
            android:layout_marginEnd="@dimen/size_8"
            android:layout_marginStart="@dimen/size_16"
            app:layout_constraintStart_toEndOf="@id/ivAlat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="asdasdahsdjh"
                android:textColor="@color/black"
                android:id="@+id/tvNamaAlat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/size_4"
                android:id="@+id/tvJenisAlat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/size_4"
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>