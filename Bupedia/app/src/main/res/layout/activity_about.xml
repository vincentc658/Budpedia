<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:background="@color/brown_600"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_marginTop="@dimen/size_32"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_width="@dimen/size_150"
        android:layout_height="@dimen/size_150"/>
    <View
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="1dp"
        android:id="@+id/vieMiddle"
        android:layout_height="1dp"/>
    <TextView
        android:layout_marginTop="@dimen/size_64"
        android:layout_marginEnd="@dimen/size_16"
        app:layout_constraintEnd_toStartOf="@+id/vieMiddle"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="viewEnd"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo"
        android:text="Versi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/size_64"
        android:id="@+id/tvVersion"
        android:layout_marginStart="@dimen/size_16"
        app:layout_constraintStart_toEndOf="@id/vieMiddle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo"
        android:text="1.0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginEnd="@dimen/size_16"
        app:layout_constraintEnd_toStartOf="@+id/vieMiddle"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="viewEnd"
        app:layout_constraintTop_toBottomOf="@+id/tvVersion"
        android:text="Pengembang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginStart="@dimen/size_16"
        app:layout_constraintStart_toEndOf="@id/vieMiddle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVersion"
        android:text="E. Cindy Y.P."
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvAbout"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/size_48"
        android:layout_marginHorizontal="@dimen/size_16"
        app:layout_constraintTop_toBottomOf="@+id/tvVersion"
        android:text="@string/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ivGmail"
        android:layout_marginTop="@dimen/size_32"
        android:src="@drawable/gmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAbout"
        android:layout_width="@dimen/size_64"
        android:layout_height="@dimen/size_64"/>
    <TextView

        android:text="budpedia@gmail.com"
        app:layout_constraintTop_toBottomOf="@id/ivGmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>